<!DOCTYPE html>
<html data-theme="mytheme">
  <head>
    <title>Sustainable Living Guide</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/aos.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <% include ./partial/navbar.ejs %>
    <div class="flex items-center justify-center min-h-screen bg-green-200">
      <div class="w-full max-w-xl bg-white rounded-2xl shadow-lg p-8">
        <h1 class="text-3xl font-bold text-center text-green-700 mb-6">
          üå± Eco Footprint Calculator
        </h1>
        <form id="ecoForm" class="space-y-5">
          <div class="form-control">
            <label class="label font-medium">Electricity Usage (kWh)</label>
            <input
              id="electricity"
              type="number"
              placeholder="e.g. 400"
              class="input input-bordered w-full"
            />
          </div>

          <div class="form-control">
            <label class="label font-medium">Travel With Machine (km)</label>
            <input
              id="carKm"
              type="number"
              placeholder="e.g. 150"
              class="input input-bordered w-full"
            />
          </div>

          <div class="form-control">
            <label class="label font-medium">Diet Type</label>
            <select id="diet" class="select select-bordered w-full">
              <option value="2.5">Meat-heavy</option>
              <option value="1.8">Mixed</option>
              <option value="1.2">Vegetarian</option>
              <option value="0.9">Vegan</option>
            </select>
          </div>

          <div class="form-control">
            <label class="label font-medium">View Footprint By:</label>
            <select id="period" class="select select-bordered w-full">
              <option value="daily">Daily</option>
              <option value="weekly">Weekly</option>
              <option value="monthly" selected>Monthly</option>
            </select>
          </div>

          <div class="mt-6 bg-green-50 p-4 rounded-xl shadow-inner text-center">
            <h2 class="text-xl font-semibold text-green-700">
              Estimated CO‚ÇÇ Footprint:
            </h2>
            <p id="result" class="text-3xl font-bold text-gray-800 mt-2">
              0.00 kg/month
            </p>
            <p id="warning" class="text-red-600 font-semibold mt-2 hidden">
              ‚ö†Ô∏è High footprint! Reducing your impact.Max 5kg par day
            </p>
          </div>
        </form>
      </div>
    </div>
    <% include ./partial/footer.ejs %>
  </body>
  <script src="/javascripts/aos.js"></script>
  <script>
    AOS.init({ mirror: true });

    const electricityInput = document.getElementById("electricity");
    const carKmInput = document.getElementById("carKm");
    const dietInput = document.getElementById("diet");
    const periodSelect = document.getElementById("period");
    const resultDisplay = document.getElementById("result");
    const warningDisplay = document.getElementById("warning");

    function calculateFootprint() {
      const electricity = parseFloat(electricityInput.value) || 0;
      const carKm = parseFloat(carKmInput.value) || 0;
      const dietFactor = parseFloat(dietInput.value) || 0;
      const period = periodSelect.value;

      // Monthly CO‚ÇÇ estimates
      const electricityCO2 = electricity * 0.5; // kg CO2 per kWh
      const carCO2 = carKm * 0.21 * 4; // weekly to monthly
      const dietCO2 = dietFactor * 30; // monthly

      const monthlyTotal = electricityCO2 + carCO2 + dietCO2;

      let displayTotal = monthlyTotal;
      let label = "kg/month";

      if (period === "daily") {
        displayTotal = monthlyTotal / 30;
        label = "kg/day";
      } else if (period === "weekly") {
        displayTotal = monthlyTotal / 4;
        label = "kg/week";
      }

      resultDisplay.textContent = `${displayTotal.toFixed(2)} ${label}`;

      // Show warning if over 5kg/day
      if (period === "daily" && displayTotal > 5) {
        warningDisplay.classList.remove("hidden");
      } else {
        warningDisplay.classList.add("hidden");
      }
    }

    [electricityInput, carKmInput, dietInput, periodSelect].forEach((input) => {
      input.addEventListener("input", calculateFootprint);
      input.addEventListener("change", calculateFootprint);
    });

    // Initial calculation
    calculateFootprint();
  </script>
</html>
